MDScreen:
    name: 'home_mobile'
    theme_bg_color: "Custom"
    md_bg_color: self.theme_cls.backgroundColor

    MDCard:
        style: 'elevated'
        size_hint: 1, .07
        pos_hint: {'center_x': .5, 'top': 1}
        radius: [0, 0, 10, 10]
        MDRelativeLayout:

            MDCard:
                style: 'filled'
                size_hint: .95, .85
                pos_hint: {"center_y": .5, "center_x": .5}
                md_bg_color: self.theme_cls.primaryColor

                MDRelativeLayout:

                    MDLabel:
                        halign: 'left'
                        text: ';) Live Stream'
                        theme_font_size: 'Custom'
                        font_size: '19dp'


                    MDCard:
                        style: 'filled'
                        size_hint: .2, .95
                        pos_hint: {"center_y": .5, "center_x": .8}
                        md_bg_color: self.theme_cls.primaryColor

                        MDRelativeLayout:
                            MDButton:
                                size_hint: .45, .75
                                pos_hint : {"center_y": .5, "center_x": .4}
                                MDButtonIcon:
                                    pos_hint : {"center_x": .5, "center_y": .5}
                                    icon: "wallet-bifold-outline"
                                    theme_font_size : "Custom"
                                    font_size: "32dp"

                            MDDivider:
                                size_hint_y: .9
                                pos_hint: {"center_x": .7, "center_y": .5}
                                orientation: "vertical"

                            MDButton:
                                on_release: app.switch_theme()
                                pos_hint : {"center_y": .5, "center_x": .99}
                                MDButtonIcon:
                                    pos_hint : {"center_x": .5, "center_y": .5}
                                    icon: "theme-light-dark"
                                    theme_font_size : "Custom"
                                    font_size: "33dp"

    MDCard:
        style: 'elevated'
        size_hint: .99, .85
        pos_hint: {'center_x': .5, 'center_y': .5}
        radius: [10, 10, 10, 10]
        MDRelativeLayout:
            MDCard:
                size_hint: 4, .06
                pos_hint: {'center_x': .5, 'top': 1}
                radius: [0, 0, 0, 0]
                MDRelativeLayout:
                    MDIcon:
                        icon: "tooltip-plus-outline"
                        size_hint: .99, .99
                        pos_hint: {"center_x": .5, "center_y": .5}
                            

            MDCard:
                style: 'elevated'
                size_hint: .99, .93
                pos_hint: {'center_x': .5, 'bottom': .9}
                MDRelativeLayout:
                    MDSwiper:
                        height: root.height - dp(40)
                        MDSwiperItem:
                            height: root.height - dp(40)
                            y: root.height - self.height - dp(20)

                            MDRelativeLayout:

                                MDSliverAppbarHeader:
                                    size_hint: .95, .95
                                    pos_hint: {'center_x': .5, 'bottom': 1}
                                    MDCard:
                                        size_hint: 1, 1
                                        pos_hint: {'center_x': .5, 'center_y': .5}
                                        MDRelativeLayout:
                                            FitImage:
                                                source: "assets/bg.jpg"
                                                radius: [15, 15, 15, 15]
                                            MDCard:
                                                adaptive_size: True
                                                size_hint: .6, .17
                                                pos_hint: {'center_x': .5, 'center_y': .1}
                                                MDRelativeLayout:
                                                    MDIcon:
                                                        icon: 'wechat'
                                                        pos_hint: {'center_x': .5, 'center_y': .65}
                                                        theme_font_size: 'Custom'
                                                        font_size: '33dp'
                                                    MDLabel:
                                                        text: 'اتاق عمومی'
                                                        adaptive_size: True
                                                        size_hint: 1, 1
                                                        pos_hint: {'center_x': .5, 'center_y': .35}
                                                        theme_font_name: 'Custom'
                                                        theme_font_size: 'Custom'
                                                        font_name: 'nasalization'
                                                        font_size: '36dp'



                                MDSliverAppbarContent:
                                    size_hint: .9, .09
                                    pos_hint: {'center_x': .5, 'top': 1}
                                    radius: [15, 15, 15, 15]
                                    MDCard:
                                        size_hint: 1, 1
                                        pos_hint: {'center_x': .5, 'center_y': .5}

                                        MDRelativeLayout:

                                            MDIcon:
                                                icon: 'account-group-outline'
                                                size_hint: .02, .95
                                                pos_hint: {'center_x': .1, 'center_y': .5}

                                            MDLabel:
                                                text: 'کابران آنلاین: 25 نفر'
                                                theme_font_name:'Custom'
                                                font_name: 'nasalization'
                                                theme_font_size:'Custom'
                                                font_size:'24dp'
                                                adaptive_size: True
                                                size_hint: .02, .95
                                                pos_hint: {'center_x': .5, 'center_y': .5}

                                            MDButton:
                                                size_hint: .04, .9
                                                pos_hint: {'center_x': .95, 'center_y': .5}

                                                MDButtonIcon:
                                                    icon: 'cards-heart-outline'
                                                    size_hint: 1, 1
                                                    pos_hint: {'center_x': .5, 'center_y': .5}  

    MDCard:
        style: 'elevated'
        size_hint: 1, .07
        pos_hint: {'center_x': .5, 'bottom': 1}
        radius: [10, 10, 0, 0]

        MDRelativeLayout:
            MDButton:
                style: 'filled'
                pos_hint : {"center_y": .5, "center_x": .1}
                MDButtonIcon:
                    pos_hint : {"center_x": .5, "center_y": .5}
                    icon: "home-circle-outline"
                    theme_font_size : "Custom"
                    font_size: "33dp"

            MDButton:
                on_release: app.load_screen('search_mobile', 'left')
                pos_hint : {"center_y": .5, "center_x": .3}
                MDButtonIcon:
                    pos_hint : {"center_x": .5, "center_y": .5}
                    icon: "heart-search"
                    theme_font_size : "Custom"
                    font_size: "33dp"

            MDButton:
                pos_hint : {"center_y": .5, "center_x": .5}
                MDButtonIcon:
                    pos_hint : {"center_x": .5, "center_y": .5}
                    icon: "share"
                    theme_font_size : "Custom"
                    font_size: "33dp"

            MDButton:
                pos_hint : {"center_y": .5, "center_x": .7}
                MDButtonIcon:
                    pos_hint : {"center_x": .5, "center_y": .5}
                    icon: "send-circle-outline"
                    theme_font_size : "Custom"
                    font_size: "33dp"

            MDButton:
                on_release:
                    app.load_screen('account_mobile', 'left')
                pos_hint : {"center_y": .5, "center_x": .9}
                MDButtonIcon:
                    pos_hint : {"center_x": .5, "center_y": .5}
                    icon: "account-circle-outline"
                    theme_font_size : "Custom"
                    font_size: "33dp"